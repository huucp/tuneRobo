<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="TuneRoboWPF.LoginWindow"
	x:Name="Window"
	Title="Login"
	Width="376" Height="230" WindowStartupLocation="CenterOwner">

    <Grid x:Name="LayoutRoot">
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="23,46,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="74"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="21,0,0,72" TextWrapping="Wrap" Text="Password" VerticalAlignment="Bottom" Width="66"/>
        <TextBox x:Name="UsernameTextBox" Text="tiennd@tosy.com"  Height="21" Margin="112,50,41,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Password ="1" Height="24" Margin="112,0,41,72" VerticalAlignment="Bottom"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Right" Height="28" Margin="0,0,28,17" VerticalAlignment="Bottom" Width="82" Click ="LoginButton_Click" IsDefault="True" />
    </Grid>
</Window>