<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Size x:Key="ScreenSize" Width="1100" Height="703"/>
    <Style x:Key="ScreenSizeStyle" TargetType="{x:Type UserControl}">
        <Setter Property="Height" Value="703"/>
        <Setter Property="Width" Value="1100"/>
    </Style>
    <BitmapImage x:Key="DefaultImage" UriSource="/Resources/cov894.jpeg" />
    <BitmapImage x:Key="YoutubeImage" UriSource="/Resources/youtube.jpg"/>
	
    <SolidColorBrush x:Key="RatingRateColor" Color="Yellow"/>
    <SolidColorBrush x:Key="GrayFont" Color="#888888"/>
    <SolidColorBrush x:Key="BlackFont" Color ="#3b3b3b"/>
</ResourceDictionary>