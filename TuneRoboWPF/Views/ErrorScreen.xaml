<UserControl x:Class="TuneRoboWPF.Views.ErrorScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="702" d:DesignWidth="1100">
    <Grid Background="{StaticResource MainBackground}">
        <TextBlock x:Name="ErrorMessageShadow"  HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" 
                   Text="{DynamicResource ErrorScreenText}" VerticalAlignment="Center" Foreground="White"
                   FontSize="26.667" FontWeight="ExtraBold">
            <TextBlock.RenderTransform>
                <TranslateTransform Y="1"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="ErrorMessage"  HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="{DynamicResource ErrorScreenText}" VerticalAlignment="Center" FontSize="26.667" FontWeight="ExtraBold"/>
            
    </Grid>
</UserControl>
