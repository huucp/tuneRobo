<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="TuneRoboWPF.Windows.TransferWindow"
	x:Name="Window"
	Width="373" Height="139"
	WindowStartupLocation="CenterOwner"
	ResizeMode="CanMinimize"
	ShowInTaskbar="False"
    ContentRendered="Window_ContentRendered" WindowStyle="None">

	<Grid x:Name="LayoutRoot" Background="WhiteSmoke">
		<ProgressBar x:Name="ProgressBar" Height="14" Margin="20,46,20,0" VerticalAlignment="Top"/>
		<Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,94,20,0" Width="70" Cursor="Hand" Click="CancelButton_Click" Height="27" VerticalAlignment="Top" FontWeight="Bold"/>
		<Label x:Name="FileTitle" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top">
            <TextBlock>
                <Run Text="{Binding TransferText}"/><Run Text=" "/><Run Text="{Binding Title}"/><Run Text="..."/><Run Text="{Binding Percentage}"/><Run Text="%"/>
            </TextBlock>
		</Label>
	</Grid>
</Window>